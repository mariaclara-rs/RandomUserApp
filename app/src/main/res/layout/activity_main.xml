<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#384047"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:text="Gerar Usuário"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/sp_nacionalidade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bt_buscar"
        app:layout_constraintEnd_toEndOf="@+id/bt_buscar"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="@+id/bt_buscar" />

    <Spinner
        android:id="@+id/sp_genero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/sp_nacionalidade"
        app:layout_constraintEnd_toEndOf="@+id/sp_nacionalidade"
        app:layout_constraintStart_toStartOf="@+id/sp_nacionalidade" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nacionalidade"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/sp_nacionalidade"
        app:layout_constraintStart_toStartOf="@+id/sp_nacionalidade" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gênero"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/sp_genero"
        app:layout_constraintStart_toStartOf="@+id/sp_genero" />

</androidx.constraintlayout.widget.ConstraintLayout>